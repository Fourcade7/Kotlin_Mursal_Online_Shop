<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <ImageView
        android:layout_weight="1"
        android:id="@+id/imageview4"
        android:src="@drawable/hijab1"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ImageView>
    <RelativeLayout
        android:layout_marginTop="-50dp"
        android:background="@drawable/layoutbackground"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textviewordername1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/raleway_light"
            android:text="Mursal"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textvieworderdescription1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textviewordername1"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/raleway_light"
            android:text="Mursal bu sizning tanlovingiz"
            android:textSize="15dp"
            android:textStyle="bold" />
        <androidx.cardview.widget.CardView
            android:layout_margin="20dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/cardview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            >

            <ImageView
                android:padding="4dp"
                android:id="@+id/imageview5"
                android:src="@drawable/ic_round_favorite_24"
                android:scaleType="centerCrop"
                android:layout_width="25dp"
                android:layout_height="25dp"></ImageView>


        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/buttonbackground"
            android:fontFamily="@font/raleway_light"
            android:text="Byurtma berish"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"></androidx.appcompat.widget.AppCompatButton>

    </RelativeLayout>

</LinearLayout>