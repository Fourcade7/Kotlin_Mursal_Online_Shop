<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        android:layout_alignParentEnd="true"
        >
        <RelativeLayout
            android:id="@+id/relativelay1"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/cardview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true"
                >

                <ImageView
                    android:id="@+id/imageview2"
                    android:src="@drawable/hijab2"
                    android:scaleType="centerCrop"
                    android:layout_width="70dp"
                    android:layout_height="70dp"></ImageView>


            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_toRightOf="@id/cardview1"
                android:layout_toLeftOf="@id/cardview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                >
                <TextView
                    android:id="@+id/textview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hijab"
                    android:layout_marginBottom="6dp"
                    android:layout_centerVertical="true"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/raleway_light"
                    />
                <TextView
                    android:id="@+id/textview3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hijab clothes"
                    android:layout_marginBottom="6dp"
                    android:layout_centerVertical="true"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/raleway_light"
                    />
                <TextView
                    android:id="@+id/textview4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 $"
                    android:layout_marginBottom="6dp"
                    android:layout_centerVertical="true"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/raleway_light"
                    />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/cardview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                >

                <ImageView
                    android:padding="4dp"
                    android:id="@+id/imageview3"
                    android:src="@drawable/ic_round_favorite_border_24"
                    android:scaleType="centerCrop"
                    android:layout_width="25dp"
                    android:layout_height="25dp"></ImageView>


            </androidx.cardview.widget.CardView>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>